        homeSection.classList.remove('active-section');
        themeInfoSection.classList.remove('active-section');
        
        if (sectionName === 'home') {
          homeSection.classList.add('active-section');
          homeBtn.classList.add('bg-blue-600', 'text-white');
          homeBtn.classList.remove('bg-gray-200', 'text-gray-700', 'hover:bg-gray-300');
          themeInfoBtn.classList.add('bg-gray-200', 'text-gray-700', 'hover:bg-gray-300');
          themeInfoBtn.classList.remove('bg-blue-600', 'text-white');
        } else if (sectionName === 'theme-info') {
          themeInfoSection.classList.add('active-section');
          themeInfoBtn.classList.add('bg-blue-600', 'text-white');
          themeInfoBtn.classList.remove('bg-gray-200', 'text-gray-700', 'hover:bg-gray-300');
          homeBtn.classList.add('bg-gray-200', 'text-gray-700', 'hover:bg-gray-300');
          homeBtn.classList.remove('bg-blue-600', 'text-white');
