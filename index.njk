    <!-- Theme Switching JavaScript -->
    <script>
      const themeSelector = document.getElementById('theme-selector');
      const html = document.documentElement;

      // Load saved theme
      const savedTheme = localStorage.getItem('selectedTheme') || 'default';
      html.setAttribute('data-theme', savedTheme);
      themeSelector.value = savedTheme;

      // Theme switch handler
      themeSelector.addEventListener('change', function() {
        const selectedTheme = this.value;
        
        // Add smooth transition effect
        document.body.style.transition = 'opacity 0.3s ease';
        document.body.style.opacity = '0.7';
        
        setTimeout(() => {
          html.setAttribute('data-theme', selectedTheme);
          localStorage.setItem('selectedTheme', selectedTheme);
          
          // Update theme info if the theme info section is active
          if (themeInfoSection.classList.contains('active-section')) {
            updateThemeInfo(selectedTheme);
          }
          
          // Show confirmation message
          showThemeChangeNotification(selectedTheme);
          
          // Add subtle loading effect to theme selector
          themeSelector.style.transform = 'scale(0.95)';
          setTimeout(() => {
            themeSelector.style.transform = 'scale(1)';
            document.body.style.opacity = '1';
          }, 100);
        }, 150);
      });

      // Theme change notification
      function showThemeChangeNotification(theme) {
        const themeNames = {
          'default': 'ğŸ¨ Default Theme',
          'retro80s': 'ğŸ•¹ï¸ 80s Retro Activated!',
          'terminal': 'ğŸ’» Terminal Mode Engaged',
